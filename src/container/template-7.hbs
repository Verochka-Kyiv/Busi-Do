{{!-- Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<header class="header">
    <div class="first">{{>headerDark data=header}}</div>
    {{> divider}}
    <div class="second">{{>frameUnderheader data=header}}</div>
</header>
{{#with hero}}
<div class="hero">
    <div class="heroTitle">{{title}}</div>
    <p class="heroDescription">{{description}}</p>
    {{#with button}}
    <a href="{{url}}" class="heroButton">{{text}}</a>
    {{/with}}
</div>
{{/with}}


{{#with about}}
<div class="about">
    <p class="aboutHeading">{{heading}}</p>
    <p class="aboutInfo">{{info}}</p>
</div>
{{/with}}
