{{!-- Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<header class="header">
    <a href="#test">
        {{>logo}}
    </a>
    <nav class="header_nav">
        <div class="header_nav_right">
            {{>nav list=header}}
        </div>
    </nav>
</header>
<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}
    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder}}" class="form_input" name="{{name}}"
                id="form-input-{{id}}" />
            {{/each}}
        </div>
        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">

    <p class="updates_title">{{title}}</p>
    {{#each list}}
    <div class="update_list">
        <div class="icon">
            {{!-- <div class="icon"></div> --}}
        </div>
        <div class="updates_list_item">
            <p class="updates_list_nick">{{nickname}}</p>
            <p class="updates_list_description">{{description}}</p>
            {{> divider}}
        </div>
    </div>

    {{/each}}
    {{#with show_all}}
    <a class="updates_link" href="{{url}}">{{text}}</a>
    {{/with}}
</div>
{{/with}}

{{#with expirience}}
<div class="expiriens">
    <span class="exp_badge">{{badge}}</span>
    <div class="exp_title">{{title}}</div>
    <div class="exp_item">
        {{#each list}}
        <div class="exp_list">
            <div>
                <strong class="exp_list_name">{{name}}</strong>
                <p class="exp_list_details">{{details}}</p>
            </div>
        </div>
        {{/each}}
    </div>
</div>
{{/with}}


<footer class="footer" id="test">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>
    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>



